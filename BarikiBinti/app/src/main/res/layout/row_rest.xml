<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageViewRest"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="200dp" />


        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/restNameView"
            android:text="Resturant Name"
            android:textColor="#115881"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:id="@+id/restAddressView"
            android:layout_marginLeft="10dp"
            android:text="Address Holder"
            android:layout_marginBottom="10dp"
            android:textColor="#CCC"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/restCostView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="Cost for Two"
            android:textColor="#35a9da"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/geolocation"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:id="@+id/restdistance"
            android:layout_marginLeft="50dp"
            android:text="Get Directions : 2km Away"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#35a9da"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:id="@+id/restRating"
            android:layout_marginLeft="50dp"
            android:text="3stars"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#35a9da"
            android:layout_height="wrap_content" />



    </LinearLayout>

</android.support.v7.widget.CardView>