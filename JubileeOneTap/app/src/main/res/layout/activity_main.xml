<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bb2031"
    tools:context="com.valentishealth.app.jubileeonetap.MainActivity">








    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="500dp"></android.support.v4.view.ViewPager>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:layout_marginTop="6dp">
        <Button
            android:id="@+id/investor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#be1e2d"
            android:text="Let's Get Started"
            android:textColor="#fff"
            android:layout_marginRight="4dp"/>
        <Button
            android:id="@+id/broker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f7931d"
            android:text="Sign In"
            android:textColor="#FFF"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>



</RelativeLayout>
